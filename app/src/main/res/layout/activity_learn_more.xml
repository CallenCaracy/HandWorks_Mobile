<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.pages.index.LearnMore">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="102dp"
            android:src="@drawable/handworks_logo_v2"
            android:contentDescription="Handworks Logo"
            tools:ignore="HardcodedText" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/titleLearnMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Handworks"
        android:textColor="@color/textPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewLogo"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/subtitleLearnMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Professional cleaning built on trust, quality, and care."
        android:textColor="@color/textPrimary"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/titleLearnMore"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="HardcodedText" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/subtitleLearnMore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardInfo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/layoutInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Our Office"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="250dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp" >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Handworks Cleaning Service Map Location"
                            android:src="@drawable/handworks_location"
                            tools:ignore="HardcodedText"/>

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Our Services"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="• Residential Cleaning\n• Office and Commercial Cleaning\n• Deep Cleaning and Sanitization\n• Eco-friendly Cleaning Options"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"
                        android:layout_marginBottom="10dp"
                        tools:ignore="HardcodedText" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Our Values"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="We believe in reliability, attention to detail, and treating every space as if it were our own."
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"
                        android:justificationMode="inter_word"
                        android:layout_marginBottom="10dp"
                        tools:ignore="HardcodedText" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Service Areas"
                        android:textStyle="bold"
                        android:textColor="@color/textPrimary"
                        android:textSize="14sp"
                        tools:ignore="HardcodedText" />

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:stretchColumns="*">

                        <TableRow>
                            <TextView
                                android:text="• Cebu City"
                                android:textSize="14sp"
                                android:textColor="@color/textPrimary"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:text="• Talisay"
                                android:textSize="14sp"
                                android:textColor="@color/textPrimary"
                                tools:ignore="HardcodedText" />
                        </TableRow>

                        <TableRow>
                            <TextView
                                android:text="• Carcar"
                                android:textSize="14sp"
                                android:textColor="@color/textPrimary"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:text="• Minglanilla"
                                android:textSize="14sp"
                                android:textColor="@color/textPrimary"
                                tools:ignore="HardcodedText" />

                        </TableRow>

                        <TableRow>
                            <TextView
                                android:text="• Mandaue City"
                                android:textSize="14sp"
                                android:textColor="@color/textPrimary"
                                tools:ignore="HardcodedText"/>
                        </TableRow>

                    </TableLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnGoToLogIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:textColor="@color/textSecondary"
        android:backgroundTint="@color/colorTertiary"
        app:layout_constraintTop_toTopOf="@id/btnGoBackToLanding"
        app:layout_constraintStart_toEndOf="@id/btnGoBackToLanding"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        tools:ignore="HardcodedText" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnGoBackToLanding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorSecondary"
        android:text="Back"
        app:icon="@drawable/back"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        app:iconTint="@color/textSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutInfo"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/footerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="© Handworks Cleaning Services 2025"
        android:textColor="#555555"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>

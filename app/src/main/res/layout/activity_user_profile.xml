<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    tools:context=".ui.pages.user.UserProfile">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profileHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnExitProfile"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/colorTertiary"
            android:contentDescription="@string/back"
            android:clickable="true"
            android:drawableTint="@color/background"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/outline_chevron_left"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/background" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewPfp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="70dp"
        app:cardCornerRadius="100dp"
        app:cardElevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profileHeader">

        <ImageView
            android:id="@+id/userPfp"
            android:layout_width="130dp"
            android:layout_height="132dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/pfp_placeholder"
            android:contentDescription="@string/user_pfp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/cleanerFirstNameDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/your_firstname"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/cardViewPfp"
        app:layout_constraintTop_toBottomOf="@id/cardViewPfp" />

    <TextView
        android:id="@+id/cleanerLastNameDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_lastname"
        app:layout_constraintStart_toStartOf="@id/cardViewPfp"
        app:layout_constraintTop_toBottomOf="@id/cleanerFirstNameDisplay" />

    <TextView
        android:id="@+id/joinedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="@string/joined"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toTopOf="@+id/joinedValue"
        app:layout_constraintStart_toEndOf="@id/cardViewPfp" />

    <TextView
        android:id="@+id/joinedValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_1_year_ago"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/cardViewPfp"
        app:layout_constraintStart_toStartOf="@id/joinedLabel"
        app:layout_constraintTop_toTopOf="@+id/cardViewPfp" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="3.5"
        android:stepSize="0.5"
        android:isIndicator="true"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/joinedLabel"
        app:layout_constraintTop_toBottomOf="@id/joinedValue" />

    <TextView
        android:id="@+id/ratingValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_3_5"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/ratingBar"
        app:layout_constraintStart_toStartOf="@+id/ratingBar"
        app:layout_constraintTop_toBottomOf="@+id/ratingBar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/profileRecycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/cleanerLastNameDisplay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/backgroundLightTransition"
        android:text="@string/sign_out"
        android:textAllCaps="false"
        android:textColor="@color/textTertiary"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profileRecycler" />

</androidx.constraintlayout.widget.ConstraintLayout>
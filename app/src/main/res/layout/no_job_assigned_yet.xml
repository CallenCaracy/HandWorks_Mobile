<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/background">

    <ImageView
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:src="@drawable/man_vacuuming_svgrepo_com"
        android:contentDescription="@string/info_icon"
        app:layout_constraintBottom_toTopOf="@+id/noJobHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/textPrimary" />

    <TextView
        android:id="@+id/noJobHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_work_for_now"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/noJobSub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/textPrimary"
        android:text="@string/set_down_and_relax_enjoy_a_drink_or_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noJobHeader" />

</androidx.constraintlayout.widget.ConstraintLayout>
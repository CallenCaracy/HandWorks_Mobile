<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".HandworksMobileApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/handworks_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/handworks_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.HandWorks_Mobile"
        tools:targetApi="31">
        <activity
            android:name=".ui.pages.index.LandingPage"
            android:exported="false" />
        <activity
            android:name=".ui.pages.auth.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.pages.index.Dashboard"
            android:exported="false" />
    </application>

</manifest>